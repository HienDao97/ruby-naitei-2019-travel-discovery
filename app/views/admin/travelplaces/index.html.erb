<% provide :title, t(".list_travel") %>
<div class="content-wrapper">
  <section class="content-header">
    <h1>
      <%= t ".list_travel" %>
    </h1>
    <ol class="breadcrumb">
      <li>
        <%= link_to "#" do %>
          <i class="fa fa-dashboard"></i><%= t ".home" %>
        <% end %>
      </li>
      <li class="active"><%= t ".list_travel" %></li>
    </ol>
  </section>
  <section class="content">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title"><%= t ".title" %></h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addTravel" id="add-Travel">
          <%= t ".add" %>
        </button>

        <table id="city-table" class="table table-striped table-bordered" style="width:100%">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th ><%= t ".name" %></th>
              <th class="col-md-4"><%= t ".content" %></th>
              <th class="col-md-2"><%= t ".address" %></th>
              <th ><%= t ".rate" %></th>
              <th ><%= t ".type_travel_place" %></th>
              <th ><%= t ".city" %></th>
              <th ><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <% @travels.each do |travel| %>
              <tr>
                <th scope="row"><%= travel.id %></th>
                <td><%= travel.name %></td>
                <td class="col-md-4"><%= travel.content %></td>
                <td class="col-md-2"><%= travel.address %></td>
                <td><%= travel.rate %></td>
                <td><%= travel.type_travel_place.name %></td>
                <td><%= travel.city.name %></td>
                <td>
                  <button type="button" class="btn btn-primary edit-travel" data-toggle="modal" data-target="#edittravel" travel-id="<%= travel.id %>"><%= t ".edit" %></button>
                  <button type="button" class="btn btn-danger delete travel-delete" travel-id="<%= travel.id %>" ><%= t ".delete" %></button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="box-footer">
        <%= paginate @travels, theme: 'twitter-bootstrap-3' %>
      </div>
    </div>
  </section>
</div>

<div class="modal fade" id="addTravel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t ".modal-title" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="addTravelPlace" action="" role="form" method="post">
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <label for=""><%= t ".name" %></label>
                <input type="text" class="form-control" id="name" name="name" value="">
              </div>
              <div class="form-group">
                <label for=""><%= t ".content" %></label>
                <input type="text" class="form-control" id="content" name="content" value="">
              </div>
              <div class="form-group">
                <label for=""><%= t ".address" %></label>
                <input type="text" class="form-control" id="address" name="address" value="">
              </div>

            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for=""><%= t ".city" %></label>
                <%= select_tag "cities", options_from_collection_for_select(@cities, "id", "name"), class: "form-control" %>
              </div>
              <div class="form-group">
                <label for=""><%= t ".type_travel_place" %></label>
                <%= select_tag "types", options_from_collection_for_select(@types, "id", "name"), class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
              <input type="submit" name="submit" id="action" value="Add" class="btn btn-info" />
              <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

