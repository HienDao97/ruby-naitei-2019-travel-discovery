<div class="site-mobile-menu">
    <div class="site-mobile-menu-header">
      <div class="site-mobile-menu-close mt-3">
        <span class="icon-close2 js-menu-toggle"></span>
      </div>
    </div>
    <div class="site-mobile-menu-body"></div>
</div>

<header class="site-navbar" role="banner">
    <div class="container">
      <div class="row align-items-center">

        <div>
          <h1 class="mb-0 site-logo">
            <%= link_to t(".travel"), "#" ,class: "text-white h2 mb-0" %>
          </h1>
        </div>
        <div class="col-12 col-md-10 d-none d-xl-block">
          <nav class="site-navigation position-relative text-right" role="navigation">
            <ul class="site-menu js-clone-nav mr-auto d-none d-lg-block">
              <li class="active">
                <%= link_to root_path do %>
                  <span><%= t ".home" %></span>
                <% end %>
              </li>
              <li class="has-children">
                <%= link_to "#" do %>
                  <span><%= t ".place" %></span>
                <% end %>
                <ul class="dropdown arrow-top">
                  <li>
                    <%= link_to place_hotel_path do %>
                      <span><%= t ".hotel" %></span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to place_travel_path do %>
                      <span><%= t ".travel_header" %></span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to place_food_path do %>
                      <span><%= t ".food" %></span>
                    <% end %>
                  </li>
                </ul>
              </li>
              <li>
                <%= link_to "#" do %>
                  <span><%= t ".blog" %></span>
                <% end %>
              </li>
              <% if logged_in? %>
                <li class="has-children">
                  <%= link_to "#" do%>
                    <span><%= t "label.user" %></span>
                  <% end %>
                  <ul class="dropdown arrow-top">
                    <li>
                      <%= link_to current_user do %>
                        <span><%= t "label.my_home_pages" %></span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to edit_user_path(current_user) do %>
                        <span><%= t "label.settings" %></span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to logout_path, method: :delete do %>
                        <span><%= t "label.logout" %></span>
                      <% end %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li>
                  <%= link_to login_path do %>
                    <span><%= t "label.login" %></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to signup_path do %>
                    <span><%= t "label.signup" %></span>
                  <% end %>
                </li>
               <% end %>
            </ul>
          </nav>
        </div>

        <div class="d-inline-block d-xl-none ml-md-0 mr-auto py-3" style="position: relative; top: 3px;">
          <%= link_to t(".contact"), class: "site-menu-toggle js-menu-toggle text-white" do %>
          <span class="icon-menu h3"></span>
          <% end %>
        </div>

      </div>

    </div>
</header>
<%= render yield :header_partial %>
